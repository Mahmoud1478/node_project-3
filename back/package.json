{
    "name": "store-front",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "engines": {
        "node": "16.18.1"
      },
    "scripts": {
        "jasmine": "jasmine",
        "test_db_init" : "db-migrate --env test reset && db-migrate --env test up",
        "pro_db_synic" : "db-migrate --env pro up",
        "build": "npx tsc",
        "test": "db-migrate --env test reset && db-migrate --env test up && npm run build && ENV='test' npm run jasmine ",
        "test2": "ENV='test' node dist/server",
        "lint": "eslint src/*.ts src/**/*.ts",
        "format": "prettier --config .prettierrc src/*.ts src/**/*.ts --write",
        "start": "node  server.js",
        "start2": "node server.js",
        "dev": "nodemon src/server.ts",
        "watch": "tsc-watch --esModuleInterop ./src/server.ts --outDir ./dist",
        "db:migrate": "db-migrate up",
        "db:create": "db-migrate db:create",
        "db:drop": "db-migrate db:drop",
        "db:fresh": "db-migrate reset && db-migrate up",
        "init": "npm install && npm run db:migrate &&npm run start",
        "zip" : "rm -r ./dist && npm run build&& cd ./dist && zip -r store_front_back.zip .",
        "clear" : "rm -rf ./dist|| true",
        "predeploylocal" : "npm run clear && npm run build && cp -r ./.npmrc ./package.json ./package-lock.json ./.elasticbeanstalk dist && echo web: npm run start2 > dist/Procfile",
        "deploylocal" : "cd ./dist && eb deploy",
        "predeploy" : "chmod +x ./bin/predeploy.sh && ./bin/predeploy.sh",
        "deploy" : "cd ./dist && eb deploy"

    },
    "dependencies": {
        "bcrypt": "^5.1.0",
        "body-parser": "^1.20.1",
        "cors": "^2.8.5",
        "db-migrate": "^0.11.13",
        "db-migrate-pg": "^1.2.2",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.8.0",
        "validatorjs": "^3.22.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/body-parser": "^1.19.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.14",
        "@types/jasmine": "^4.3.0",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/node": "^18.11.9",
        "@types/pg": "^8.6.5",
        "@types/supertest": "^2.0.12",
        "@types/validatorjs": "^3.15.0",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.42.1",
        "eslint": "^8.27.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jasmine": "^4.5.0",
        "jasmine-spec-reporter": "^7.0.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "supertest": "^6.3.1",
        "ts-node": "^10.9.1",
        "tsc-watch": "^5.0.3",
        "typescript": "^4.8.4"
    },
    "keywords": [],
    "author": "",
    "license": "ISC"
}
